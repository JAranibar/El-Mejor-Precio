@model UserRegisterModel

@{
    ViewData["Title"] = "Register Users";
}  	

<html>	

@section Head {
	<title>Registrador de Usuario</title>	
	<meta charset="UTF-8" />	
}


<body>

	<style>

		div#container {
			position: relative;
			background: rgba(220, 198, 190, 0.797);
			margin: 5px;
			left: 250px;
			width: 640px;
			height: 615px;
			border: 1px black solid;
			border-radius: 15px;
			box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
			opacity: 0.9;
		}
		
		div#form {
			position: relative;
			right: 50px;
			margin: 20px;
			top: 10px;
			left: 50px;
			width: 500px;
			opacity: 0.9;
		}

	</style>


	<div id="container">
			<div id=form>
			<h2>User Register:</h2>
			<br>
			<form method="post">
				@if(!ViewData.ModelState.IsValid){
					<div style="color: red;">*Error en el formulario</div>
				}
				<div class ="form-group">
				<label id="UserName">UserName: </label>
				<input type="text"  class="form-control" name="UserName" placeholder="Enter User" required >  
				</div>
				<div class ="form-group">
				<label id="Password">Password: </label>
				<input type="Password"  class="form-control"  name="Password" placeholder="Enter Password" required >  
				</div>
				<div class ="form-group">
				<label id="Email">Email: </label>
				<input type="text"  class="form-control"  name="Email"  placeholder="Enter Email" required >
				</div>
				<div class ="form-group">
				<label id="Name">Name: </label>
				<input type="text"  class="form-control"  name="Name"  placeholder="Enter Name" required >  
				</div>
				<div class ="form-group">
				<label id="LastName">LastName: </label>
				<input type="text"  class="form-control"  name="LastName"   placeholder="Enter LastName"  required >  
				</div>
				<div class ="form-group">
				<label id="DNI">DNI: </label>
				<input type="number"  class="form-control"  name="DNI"   placeholder="Enter DNI" required >  
				</div>
				<div class ="form-group">
				<button type="submit" class="btn btn-info btn-block"> Register </button>  
				</div>
			</form>
			</div> 
	</div>

</body>


</html>