@{
    ViewData["Title"] = "Register product";
}

@model PriceViewModel

@section Head {
<link rel="stylesheet" type="text/css" media="screen" href="~/css/StyleRegisterProd.css" />
}

<style>
body{
    background-color:rgb(192, 210, 126);
}

.centered-form{
	margin-top: 10px;
}

.panel-default
{
	width: 800px;
	position :relative;
	left: -60%;
}

.centered-form .panel{
	background: rgba(255, 255, 255, 0.8);
	box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
}
</style>


<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Registrar producto</h3>
			 			</div>
			 			<div class="panel-body">
							 @if(!ViewData.ModelState.IsValid){
								 <div style="color: red;">Error en el formulario</div>
							 }
			    		<form role="form" method="post">
			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
										<input type="text" name="Value" class="form-control input-sm" placeholder="Valor del producto">
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="text" name="Product.Name" class="form-control input-sm" placeholder="Nombre del producto">
			    					</div>
			    				</div>
			    			</div>

			    			<div class="form-group">
			    				<input type="text" name="Product.CodeBar" class="form-control" placeholder="Codigo de barras">
			    			</div>

			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="text" name="Location.Local" class="form-control input-sm" placeholder="Nombre del local">
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input id="pac-input" type="text" class="form-control input-sm"  name="Location.Address" placeholder="Ingrese direccion exacta...">
			    					</div>
			    				</div>
			    			</div>
                            <div class="form-group" id="Mapa"></div>
			    			<input type="submit" value="Registrar" class="btn btn-info btn-block">
			    		
			    		</form>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>

@section Scripts{
    <script src="~/js/GoogleMaps.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDaKvSdYzlYIvb4n8x8iJsriKbW5IWqJ_A&libraries=places&callback=cargarMapa" async defer></script>
}