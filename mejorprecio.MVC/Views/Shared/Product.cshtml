@model List<PriceViewModel>
@{
    ViewData["Title"] = "Product";
}

@section Head {
<link rel="stylesheet" type="text/css" media="screen" href="~/css/StyleRegisterProd.css" />
}

<h2>Se han encontrado los siguientes productos:</h2>
<br />

<table  border="5" >
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Direccion</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Product.Name</td>
                <td>@product.Value</td>
                <td>@product.Location.Address</td>
            </tr>
        }
    </tbody>
</table>

<div id="Mapa"></div>

@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB3hF3X-q1xSqkJekT1cRa5LiALeEb4rqw"> </script>
            
    <script src="~/js/GoogleMaps.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            @foreach (var product in @Model) 
            {
                <text>
                addMarker("@product.Location.Address", "@product.Location.Local", "@product.Value", "@product.Product.Name", "@product.Date");
                </text>
            }
        });
    </script>
}
